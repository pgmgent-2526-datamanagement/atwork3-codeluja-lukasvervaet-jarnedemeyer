generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  password  String
  role_id   Int
  role      UserRole @relation(fields: [role_id], references: [id])
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserRole {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  description String?
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Host {
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model shift {
  id        Int      @id @default(autoincrement())
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model shiftRole {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id         Int      @id @default(autoincrement())
  startTime  DateTime
  endTime    DateTime
  playersCount Int
  hostsRequired Int
  food_required Boolean
  is_b2b     Boolean
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  foodItems BookingFoodItem[]
}

model Package {
  id                Int       @id @default(autoincrement())
  name              String
  category          PackageCategory      // VR, VR_BATTLE, KIDS, SCHOOL
  groupType         GroupType            // NORMAL or LARGE_GROUP
  playTimeMin       Int
  visitDurationMin  Int
  pricePerPlayer    Decimal @db.Decimal(10, 2)
  gameSelection     String?             // "Choose in venue", "NanoClash Focus", ...
  freeDrink         Boolean @default(false)
  freeSupervisor    Boolean @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum PackageCategory {
  VR
  VR_BATTLE
  KIDS
  SCHOOL
}

enum GroupType {
  NORMAL
  LARGE_GROUP
}

model Customer {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  company   String?
  vatNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model foodItem {
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings  BookingFoodItem[]
}

model BookingFoodItem {
  id         Int      @id @default(autoincrement())
  bookingId  Int
  foodItemId Int
  quantity   Int      @default(1)

  booking    Booking   @relation(fields: [bookingId], references: [id])
  foodItem   foodItem  @relation(fields: [foodItemId], references: [id])
}