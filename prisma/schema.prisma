generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// UserRole model - represents different user roles (admin, user, etc.)
model UserRole {
  id    Int    @id @default(autoincrement())
  name  String @unique
  description String?
  users User[] // One-to-many relation with User
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_roles")
}

// User model - represents users with a role
model User {
  id        Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email     String   @unique
  phone     String?
  password  String
  roleId    Int      // Foreign key to UserRole
  role      UserRole @relation(fields: [roleId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
