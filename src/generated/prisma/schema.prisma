generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  password  String
  role_id   Int
  role      UserRole @relation(fields: [role_id], references: [id])
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserRole {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Host {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookingHosts BookingHost[]
  shifts       Shift[]
}

model Shift {
  id        Int      @id @default(autoincrement())
  hostId    Int?
  startTime DateTime
  endTime   DateTime
  roleId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  host Host?      @relation(fields: [hostId], references: [id])
  role ShiftRole? @relation(fields: [roleId], references: [id])
}

model ShiftRole {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  shifts Shift[]
}

model Booking {
  id                 Int      @id @default(autoincrement())
  venue              String?
  dayOfWeek          String?
  startTime          DateTime @db.Time
  endTime            DateTime @db.Time
  bookingDate        DateTime @db.Date
  playersCount       Int
  hostsRequired      Int
  food_required      Boolean  @default(false)
  is_b2b             Boolean  @default(false)
  status             String?
  eposFamily         String?
  packageName        String?
  bookingDescription String?
  notes              String?
  customerId         Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  customer     Customer?         @relation(fields: [customerId], references: [id])
  foodItems    BookingFoodItem[]
  bookingHosts BookingHost[]
}

model Package {
  id               Int             @id @default(autoincrement())
  name             String
  category         PackageCategory // VR, VR_BATTLE, KIDS, SCHOOL
  groupType        GroupType // NORMAL or LARGE_GROUP
  playTimeMin      Int
  visitDurationMin Int
  pricePerPlayer   Decimal         @db.Decimal(10, 2)
  gameSelection    String? // "Choose in venue", "NanoClash Focus", ...
  freeDrink        Boolean         @default(false)
  freeSupervisor   Boolean         @default(false)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

enum PackageCategory {
  VR
  VR_BATTLE
  KIDS
  SCHOOL
}

enum GroupType {
  NORMAL
  LARGE_GROUP
}

model Customer {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?
  company   String?
  vatNumber String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

model FoodItem {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings BookingFoodItem[]
}

model BookingFoodItem {
  id         Int @id @default(autoincrement())
  bookingId  Int
  foodItemId Int
  quantity   Int @default(1)

  booking  Booking  @relation(fields: [bookingId], references: [id])
  foodItem FoodItem @relation(fields: [foodItemId], references: [id])
}

model BookingHost {
  id        Int @id @default(autoincrement())
  bookingId Int
  hostId    Int

  booking Booking @relation(fields: [bookingId], references: [id])
  host    Host    @relation(fields: [hostId], references: [id])
}
